<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduTron.GameOverPage"
             Title="Játék vége"
             NavigationPage.HasBackButton="False">
    <FlexLayout>
        <FlexLayout.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="50"/>
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
            </Style>
        </FlexLayout.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <VerticalStackLayout VerticalOptions="End">
                <Label x:Name="eredmenyLbl" Grid.Row="0" Text="0 - 0"/>
                <Label x:Name="gyoztesLbl" Grid.Row="0"  Text="Győztes: "/>
            </VerticalStackLayout>
            <Button Grid.Row="1" Text="Új játék" WidthRequest="200" HeightRequest="50" VerticalOptions="End" Clicked="NewGame_Clicked"/>
            <Button Grid.Row="3" Text="Kilépés" WidthRequest="200" HeightRequest="50" VerticalOptions="Start" Clicked="QuitBtn_Clicked"/>
        </Grid>
    </FlexLayout>
</ContentPage>